{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tchap-desktop",
  "version": "0.0.4",
  "identifier": "fr.gouv.beta.tchap-desktop",
  "build": {
    "devUrl": "http://localhost:8080",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tchap-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "enabled": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ2QTA4NzMxQzFENEZBRDIKUldUUyt0VEJNWWVnUmhqOXFZcXd6U3grTnd0emU1d0EySklYN3ZBOEhpMEtZZXdmNEVJVWMvZloK",
      "endpoints": [
        "https://github.com/tchapgouv/tchap-desktop/releases/download/tchap-0.0.4/latest.json"
      ],
      "installMode": "passive",
      "autoDownload": true,
      "autoInstall": true,
      "dialog": false
    },
    "protocol": {
      "schemas": [
        "tchap"
      ]
    }
  }
}
